<html>
    <head>
       <title> <%= title %> </title>
        <link rel="stylesheet" href="/css/home" >
    </head>
    <body>
        <h1 id = "page-heading"> Contact List </h1>
        <div>
            <ul>
                <% for( let i of contact_list){ %>
                    <li class = "contact">
                        <div class = "details">
                        <p>  Hi <%= i.name %></p>
                        <p>  Your Contact is <%= i.phone %></p>
                        </div>
                        <div class = "delete-button">
                            <a href = "delete-contact/<%= i.phone %>">
                                <button> Delete</button> 
                            </a> 
                        </div>
                    </li>    
                <% } %>
            </ul>

           
        </div>
        <form id= "new-contact-form"action="/create-contact" method="POST">
            <input type="text" name="name" id="text" placeholder="Enter Name">
            <input type="number" name="phone" placeholder="Enter phone">
            <button type="submit"> Add Contact </button>
        </form>

        <script type="text/javascript" src = "/js/home.js"></script>
         
    </body>
</html>